if [[ $OSTYPE == darwin* ]] ; then
  mac_version=`system_profiler SPSoftwareDataType | grep "System Version" | awk '{print $6}' | sed "s:.[[:digit:]]*.$::g"`
  if [[ "$mac_version" == '10.7' ]] ; then
    function spchar {
      chars=("¡" "¿" "ॐ" "†" "※" "⁂" "⁋" "℗" "⇨" "∞" "∭" "∴" "⌛" "⌨" "⍟" "⎋" "◎" "☀" "☁" "☂" "☃" "☄" "★" "☑" "☒" "☕" "☘" "☛" "☞" "☠" "☪" "☫" "☬" "☯" "☸" "☹" "☺" "♕" "♖" "♗" "♘" "♞" "♠" "♣" "♥" "♦" "♨" "♩" "♪" "♫" "♭" "♯" "♻" "⚀" "⚁" "⚂" "⚃" "⚄" "⚅" "⚐" "⚒" "⚓" "⚔" "⚕" "⚚" "⚛" "⚠" "⚡" "✂" "✆" "✈" "✌" "✍" "✏" "✓" "✖" "✗" "✞" "✡" "✪" "✯" "✹" "❀" "❄" "❖" "➔" "➜" "➠" "➢" "➥" "➲" "➾" "" "🌋" "🌏" "🌛" "🌠" "🍍" "🍏" "🍕" "🍗" "🍫" "🎠" "🎤" "🎳" "🎴" "🎼" "👓" "💯" "💳" "🔖" "😄")
      RANDOM=$$$(date +%s)
      echo ${chars[$RANDOM % ${#chars[@]}]}
    }
  else
    function spchar {
      chars=("ॐ" "†" "※" "⁂" "℗" "⇨" "∞" "∭" "∴" "⌛" "⌨" "◎" "☀" "☁" "☂" "☃" "☄" "★" "☑" "☒" "☕" "☘" "☛" "☞" "☠" "☪" "☯" "☹" "☺" "♕" "♖" "♗" "♘" "♞" "♠" "♣" "♥" "♦" "♨" "♩" "♪" "♫" "♭" "♯" "♻" "⚀" "⚁" "⚂" "⚃" "⚄" "⚅" "⚐" "⚒" "⚓" "⚔" "⚛" "⚠" "⚡" "✂" "✆" "✈" "✌" "✍" "✏" "✓" "✖" "✗" "✞" "✡" "✪" "✯" "✹" "❀" "❄" "❖" "➔" "➜" "➠" "➢" "➥" "➲" "➾" "")
      RANDOM=$$$(date +%s)
      echo ${chars[$RANDOM % ${#chars[@]}]}
    }
  fi
else
  function spchar {
    echo "$"
  }
fi
